{
  "name": "electron-project",
  "version": "1.0.0",
  "description": "Cross Platform Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build",
    "release": "build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arjunkhetia/Electron-Project.git"
  },
  "keywords": [
    "Electron",
    "Platform",
    "Desktop",
    "Application",
    "Template"
  ],
  "author": "arjunkhetia <arjunkhetia@gmail.com>",
  "dependencies": {
    "electron-updater": "^4.0.6"
  },
  "devDependencies": {
    "electron": "^5.0.2",
    "electron-builder": "^20.41.0"
  },
  "build": {
    "appId": "com.archangel.app",
    "productName": "Application",
    "copyright": "Copyright Â© 2019 Arjun Khetia",
    "linux": {
      "category": "utility",
      "icon": "./build/icons/*.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "default"
    },
    "publish": [
      "github"
    ]
  }
}
